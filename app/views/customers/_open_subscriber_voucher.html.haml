- if group.redeemable_showdates.empty?
  .row
    .col-md-2= group.size
    .col.text-center= group.name
    .col.text-center Reservations unavailable for this show
    .col-md-2
- else
  - gid = group.group_id
  = form_tag confirm_multiple_customer_vouchers_path(@customer) do
    = hidden_field_tag 'voucher_ids', group.voucherlist
    .row
      .col-md-2.text-center= menu_or_static_text('number', group.size)
      .col.text-center{:title => (group.voucherlist if @gAdminDisplay)}= group.name
      .col.text-center
        - label_function = @gAdminDisplay ? :date_with_explanation_for_admin : :date_with_explanation
        = select_tag 'showdate_id', | 
          content_tag(:option, "Select date to reserve...", :value => 0) + options_from_collection_for_select(group.redeemable_showdates.sort, :showdate_id, label_function), |
          :class => 'showdate form-control form-control-sm', |
          :onchange => %Q{$('#special_seating_#{gid}').slideToggle(); $('#confirm_#{gid}').prop('disabled',false)} |
        = render :partial => 'special_seating', :locals => {:gid => gid}
      .col-md-2.text-center= submit_tag 'Confirm', :disabled => 'disabled', :disable_with => 'Confirming...', :id => "confirm_#{gid}", :class => 'btn btn-sm btn-success'
